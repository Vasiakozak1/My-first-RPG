<Window x:Class="My_first_RPG.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_first_RPG"
        mc:Ignorable="d"
        Title="Серіалізація" Height="300" Width="349">
    <Grid>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" Margin="135,10,0,0" TextChanged="textBox1_TextChanged"/>
        <Label x:Name="label" Content="Password:" HorizontalAlignment="Left" Margin="72,7,0,0" VerticalAlignment="Top" Height="30"/>
        <Button x:Name="Btn_Serialize" Content="Serialize object!" HorizontalAlignment="Left" Margin="130,130,0,0" VerticalAlignment="Top" Width="95" Height="25" IsEnabled="False" Click="Btn_Serialize_Click"/>
    </Grid>
</Window>
